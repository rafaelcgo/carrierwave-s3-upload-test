= simple_form_for(:user, as: :user, url: session_path(:user), html: { class: 'form-inline' }) do |f|
  = f.input :email, required: false, autofocus: true, placeholder: "Email", label: false
  = f.input :password, required: false, placeholder: "Senha", label: false, input_html: { class: "input-small" }
  = f.hidden_field :remember_me, value: true
  = f.button :submit, "Entrar"